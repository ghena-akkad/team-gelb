<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="BOTTOM_CENTER" prefHeight="277.0" prefWidth="356.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LobbyController">

    <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="3.0" />
  </padding>

  <Label fx:id="welcomeText" text="Enter your name:">
      <font>
         <Font size="15.0" />
      </font>
      <padding>
         <Insets top="10.0" />
      </padding>
      <VBox.margin>
         <Insets top="40.0" />
      </VBox.margin></Label>
   <TextField fx:id="nameField" alignment="BOTTOM_CENTER" onAction="#onNextButtonClick" prefHeight="0.0" prefWidth="316.0">
      <VBox.margin>
         <Insets top="28.0" />
      </VBox.margin>
   </TextField>
   <Button fx:id="button_next" mnemonicParsing="false" onAction="#onNextButtonClick" prefHeight="20.0" prefWidth="44.0" text="Next">
      <VBox.margin>
         <Insets top="70.0" />
      </VBox.margin>
   </Button>
</VBox>
